local function unlockAll()
	if not unlockEvent then
		warn("Unlock Remote not found")
		return
	end
	for _, char in ipairs(allCharacters) do
		unlockEvent:FireServer(char)
		task.wait(0.1)
	end
end

-- === BUTTONS ===
makeButton("Toggle Invincibility", 50, toggleInvincibility)
makeButton("Infinite Coins", 100, toggleCoins)
makeButton("Unlock All Characters", 150, unlockAll)

-- Minimize Button
local mini = Instance.new("TextButton", Frame)
mini.Size = UDim2.new(0, 30, 0, 30)
mini.Position = UDim2.new(1, -35, 0, 5)
mini.Text = "_"
mini.MouseButton1Click:Connect(function()
	Frame.Visible = false
	open.Visible = true
end)

-- Open Button
local open = Instance.new("TextButton", ScreenGui)
open.Size = UDim2.new(0, 100, 0, 40)
open.Position = UDim2.new(0.01, 0, 0.9, 0)
open.Text = "Open GUI"
open.Visible = false
open.MouseButton1Click:Connect(function()
	Frame.Visible = true
	open.Visible = false
end)
