-- Gui + Functions for Heroes: Online World
local Players = game:GetService("Players")
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local LocalPlayer = Players.LocalPlayer

-- Character Unlock Remote
local unlockEvent = ReplicatedStorage:FindFirstChild("metaRemoteEvent") -- Confirmed

-- === GUI Setup ===
local ScreenGui = Instance.new("ScreenGui", LocalPlayer:WaitForChild("PlayerGui"))
ScreenGui.Name = "HeroesHackGui"

local Frame = Instance.new("Frame", ScreenGui)
Frame.Size = UDim2.new(0, 300, 0, 300)
Frame.Position = UDim2.new(0.3, 0, 0.3, 0)
Frame.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
Frame.Active = true
Frame.Draggable = true

local title = Instance.new("TextLabel", Frame)
title.Size = UDim2.new(1, 0, 0, 40)
title.Text = "Heroes Online GUI"
title.TextColor3 = Color3.fromRGB(255, 255, 255)
title.BackgroundColor3 = Color3.fromRGB(35, 35, 35)

local function makeButton(name, position, callback)
	local btn = Instance.new("TextButton", Frame)
	btn.Size = UDim2.new(1, -20, 0, 40)
	btn.Position = UDim2.new(0, 10, 0, position)
	btn.Text = name
	btn.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
	btn.TextColor3 = Color3.fromRGB(255, 255, 255)
	btn.MouseButton1Click:Connect(callback)
end

-- === FUNCTIONS ===

-- Invincibility Toggle
local invincibilityConnection
local invincible = false
local function toggleInvincibility()
	invincible = not invincible
	local char = LocalPlayer.Character or LocalPlayer.CharacterAdded:Wait()
	local hum = char:FindFirstChildOfClass("Humanoid")
	if not hum then return end
	if invincible then
		invincibilityConnection = hum.HealthChanged:Connect(function()
			if hum.Health < hum.MaxHealth then
				hum.Health = hum.MaxHealth
			end
		end)
	else
		if invincibilityConnection then
			invincibilityConnection:Disconnect()
			invincibilityConnection = nil
		end
	end
end

-- Infinite Coins
local coinsLooping = false
local function toggleCoins()
	coinsLooping = not coinsLooping
	local stats = LocalPlayer:FindFirstChild("leaderstats")
	if not stats then return end
	local coins = stats:FindFirstChild("Coins")
	if not coins then return end
	if coinsLooping then
		task.spawn(function()
			while coinsLooping do
				coins.Value = 999999999
				task.wait(1)
			end
		end)
	end
end

